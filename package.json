{
  "name": "spotify-web-api",
  "version": "1.0.0",
  "description": "An isomorphic TypeScript wrapper for Spotify's Web API",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types",
  "repository": "https://github.com/inferrinizzard/spotify-web-api.git",
  "author": "inferrinizzard",
  "license": "MIT",
  "files": [
    "cjs",
    "esm",
    "types",
    "assets"
  ],
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
		"test:dom": "vitest run --environment jsdom",
    "test:node": "vitest run --environment node",
		"test": "yarn test:dom && yarn test:node",
    "types": "tsc --project tsconfig.json",
    "generate-docs": "typedoc --out docs src/index.ts"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "@inferrinizzard/eslint-config": "^0.1.3",
    "@types/qs": "^6.9.4",
    "eslint": "^8.47.0",
    "jsdom": "^22.1.0",
    "prettier": "^2.7.1",
    "typedoc": "^0.18.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  }
}
