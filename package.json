{
  "name": "spotify-web-api",
  "version": "1.0.0",
  "description": "An isomorphic TypeScript wrapper for Spotify's Web API",
  "repository": "https://github.com/inferrinizzard/spotify-web-api.git",
  "author": "inferrinizzard",
  "license": "MIT",
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "type": "module",
  "main": "dist/spotify-web-api.umd.js",
  "module": "dist/spotify-web-api.cjs",
  "types": "dist/spotify-web-api.d.ts",
  "exports": {
    ".": {
      "import": "./dist/spotify-web-api.cjs",
      "require": "./dist/spotify-web-api.umd.js"
    }
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "vite build",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "test:dom": "vitest run --environment jsdom",
    "test:node": "vitest run --environment node",
    "test": "yarn test:dom && yarn test:node",
    "types": "tsc --project tsconfig.json",
    
    "generate-docs": "typedoc --out docs src/index.ts",
    "generate-types": "openapi  --input ./tools/schema/main/openapi-schema.yaml --output ./src/openapi-types --client axios",
    
    "pre-commit": "lint-staged",
    "pre-push": "yarn lint:fix && yarn test"
  },
  "lint-staged": {
    "src/**/*": "eslint --fix",
    "*.ts": "bash -c yarn types"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "@inferrinizzard/eslint-config": "^0.1.3",
    "@types/qs": "^6.9.4",
    "eslint": "^8.47.0",
    "form-data": "4.x",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.0",
    "openapi-typescript-codegen": "^0.25.0",
    "prettier": "^2.7.1",
    "typedoc": "^0.18.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2",
    "vitest": "^0.34.1"
  },
  "contributors": [
    "inferrinizzard",
    "adamgrieger"
  ]
}
